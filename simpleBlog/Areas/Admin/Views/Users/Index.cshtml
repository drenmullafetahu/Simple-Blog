@model authcontroller.Areas.Admin.ViewModels.UsersIndex

<h1>Users</h1>

<div class="btn-toolbar">
    <a href="@Url.Action("new")" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-plus"></i>Create User</a>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>EMail</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model.Users){
        <tr>
            <td>@u.Id</td>
            <td>@u.UserName</td>
            <td>@u.Email</td>
            <td>@String.Join(",",u.Roles.Select(p=>p.Name))</td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("edit", new {u.Id})" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-edit"></i>Edit User</a>
                    <a href="@Url.Action("resetPassword", new {u.Id })" class="btn btn-xs btn-default"><i class="glyphicon glyphicon-lock"></i>Reset Password</a>
                    <a href="@Url.Action("delete", new { u.Id})" class="btn btn-xs btn-danger" data-posts="Are u user you want to delete user @u.UserName ? "><i class="glyphicon glyphicon-remove"></i>Delete User</a>
                </div>

            </td>
        </tr>
        }
    </tbody>
</table>




